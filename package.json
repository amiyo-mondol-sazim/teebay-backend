{
  "name": "project-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.11",
    "bun": ">=1.3.0"
  },
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "prepare": "husky install",
    "build": "nest build",
    "build:bun": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "dotenv -e ./.env.development.local -- nest start --watch",
    "start:debug": "dotenv -e ./.env.development.local -- nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:bun": "bun run dist/src/main.js",
    "start:bun:dev": "dotenv -e ./.env.development.local -- bun --hot src/main.ts",
    "start:bun:debug": "dotenv -e ./.env.development.local -- bun --tsconfig-override ./tsconfig.bun.json --inspect --watch src/main.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint-staged": "lint-staged",
    "db:migration:create": "rm ./src/db/migrations/.snapshot.json || dotenv -e ./.env.development.local -- mikro-orm migration:create",
    "db:migration:up:dev": "dotenv -e ./.env.development.local -- mikro-orm migration:up",
    "db:migration:up:test": "dotenv -e ./.env.test.local -- mikro-orm migration:up",
    "db:migration:up:prod": "mikro-orm migration:up --config ./dist/src/db/db.config.js",
    "db:migration:down:dev": "dotenv -e ./.env.development.local -- mikro-orm migration:down",
    "db:migration:down:test": "dotenv -e ./.env.test.local -- mikro-orm migration:down",
    "db:migration:list": "dotenv -e ./.env.development.local -- mikro-orm migration:list",
    "db:migration:check": "dotenv -e ./.env.development.local -- mikro-orm migration:check",
    "db:migration:pending": "dotenv -e ./.env.development.local -- mikro-orm migration:pending",
    "db:seed:dev": "dotenv -e ./.env.development.local -- mikro-orm seeder:run",
    "db:seed:prod": "mikro-orm seeder:run --config ./dist/src/db/db.config.js",
    "db:seed:test": "dotenv -e ./.env.test.local -- mikro-orm seeder:run",
    "db:migration:fresh:dev": "dotenv -e ./.env.development.local -- mikro-orm migration:fresh --seed DevDatabaseSeeder",
    "db:migration:fresh:test": "dotenv -e ./.env.test.local -- mikro-orm migration:fresh",
    "db:migration:fresh:ci": "mikro-orm migration:fresh",
    "test": "dotenv -e ./.env.test.local -- vitest run",
    "test:watch": "dotenv -e ./.env.test.local -- vitest watch",
    "test:cov": "dotenv -e ./.env.test.local -- vitest run --coverage",
    "test:e2e": "dotenv -e ./.env.test.local -- vitest run --config ./vitest.e2e.config.mts",
    "test:bun": "dotenv -e ./.env.test.local -- bun test",
    "test:bun:e2e": "dotenv -e ./.env.test.local -- bun test --config-file ./vitest.e2e.config.mts",
    "pre-push": "./scripts/pre-push-check.sh",
    "check": "yarn build && npx tsc --noEmit && npx prettier --check \"src/**/*.ts\" \"test/**/*.ts\" && yarn lint && yarn test",
    "check:quick": "npx tsc --noEmit && yarn lint"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.685.0",
    "@aws-sdk/s3-request-presigner": "^3.485.0",
    "@cantoo/pdf-lib": "^2.2.3",
    "@metinseylan/nestjs-opentelemetry": "^3.0.0",
    "@mikro-orm/cli": "~6.2.0",
    "@mikro-orm/core": "~6.2.0",
    "@mikro-orm/migrations": "~6.2.0",
    "@mikro-orm/nestjs": "^5.2.3",
    "@mikro-orm/postgresql": "~6.2.0",
    "@mikro-orm/seeder": "~6.2.0",
    "@nestjs/axios": "^3.1.2",
    "@nestjs/common": "^10.3.1",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.4.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.1",
    "@nestjs/platform-socket.io": "^10.3.7",
    "@nestjs/swagger": "^8",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/websockets": "^10.3.3",
    "@sendgrid/mail": "^8.1.4",
    "argon2": "^0.31.2",
    "axios": "^1.7.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.10",
    "google-auth-library": "^9.15.0",
    "helmet": "^7.1.0",
    "nest-winston": "^1.8.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "uuidv4": "^6.2.13",
    "winston": "^3.16.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@faker-js/faker": "^8.4.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.1",
    "@swc/core": "^1.7.26",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pluralize": "^0.0.33",
    "@types/supertest": "^6.0.2",
    "@types/timezoned-date": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^2.1.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-autofix": "^1.1.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.8.3",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.4",
    "timezoned-date": "^3.0.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3",
    "unplugin-swc": "^1.5.1",
    "vitest": "^2.1.1",
    "vitest-mock-extended": "^2.0.2"
  },
  "lint-staged": {
    "./**/*.ts": "eslint --fix --max-warnings=0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged"
    }
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/db/db.config.ts"
    ]
  }
}
