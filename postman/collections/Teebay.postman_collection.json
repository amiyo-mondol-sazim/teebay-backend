          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{base_url}}/api/v1/auth/sign-in",
            "description": "Sign in with email and password",
            "auth": {
              "type": "noauth"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 2xx or 3xx', function () {",
                  "    pm.expect(pm.response.code).to.be.within(200, 399);",
                  "});",
                  "",
                  "pm.test('Response has JSON content-type', function () {",
                  "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
                  "});",
                  "",
                  "// Extract and save access token on successful sign in",
                  "if (pm.response.code >= 200 && pm.response.code < 300) {",
                  "    try {",
                  "        const jsonData = pm.response.json();",
                  "        // Handle both response shapes: data.accessToken or accessToken",
                  "        const token = (jsonData.data && jsonData.data.accessToken) || jsonData.accessToken;",
                  "        if (token) {",
                  "            pm.environment.set('accessToken', token);",
                  "            console.log('Access token saved to environment variable accessToken');",
                  "        }",
                  "    } catch (e) {",
                  "        console.log('Could not parse response JSON for token extraction');",
                  "    }",
                  "}"
                ]
              }
            }
          ]
